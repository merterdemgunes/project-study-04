<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stroke_background"
    tools:context=".FollowingActivity">


  <com.google.android.material.button.MaterialButton
      android:id="@+id/buttonMines"
      android:layout_width="72dp"
      android:layout_height="52dp"
      android:background="@drawable/button_custom"
      android:drawableLeft="@drawable/ic_remove"
      android:paddingLeft="22dp"
      app:backgroundTint="#F48BAF"
      app:cornerRadius="10dp"
      app:layout_constraintBaseline_toBaselineOf="@+id/button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.047"
      app:layout_constraintStart_toStartOf="parent" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/buttonPositive"
      android:layout_width="72dp"
      android:layout_height="52dp"
      android:background="@drawable/button_custom"
      android:drawableLeft="@drawable/ic_positive"
      android:paddingLeft="24dp"
      app:backgroundTint="#F48BAF"
      app:cornerRadius="10dp"
      app:layout_constraintBaseline_toBaselineOf="@+id/button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.952"
      app:layout_constraintStart_toStartOf="parent" />


  <com.google.android.material.button.MaterialButton
      android:id="@+id/button"
      android:layout_width="139dp"
      android:layout_height="51dp"
      android:background="@drawable/button_custom"
      android:text="@string/START"
      app:backgroundTint="#F48BAF"
      app:cornerRadius="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/frameLayout"
      app:layout_constraintVertical_bias="0.15" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/buttonStop"
      android:layout_width="139dp"
      android:layout_height="51dp"
      android:background="@drawable/button_custom"
      android:text="@string/STOP"
      app:backgroundTint="#F48BAF"
      app:cornerRadius="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/button" />

  <FrameLayout
      android:id="@+id/frameLayout"
      android:layout_marginTop="65dp"
      android:layout_width="match_parent"
      android:layout_height="509dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:background="@drawable/stroke_background"
      app:layout_constraintVertical_bias="0.0">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageFollowing1"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/atlabirentmap" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageFollowing"
        android:layout_width="128dp"
        android:layout_height="73dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-13dp"
        app:srcCompat="@drawable/atjakelast" />
  </FrameLayout>
  <com.google.android.material.button.MaterialButton
      android:id="@+id/btnBack5"
      android:layout_width="62dp"
      android:layout_height="40dp"
      android:background="@drawable/button_custom"
      android:drawableLeft="@drawable/ic_back"
      android:paddingLeft="18dp"
      app:backgroundTint="#F48BAF"
      app:cornerRadius="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.077"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>